{
  "name": "6.x TC database schema",
  "description": "a simple reduced schema for testing purposes.",
  "version": "1.0",
  "tables": {
    "creature_template": {
      "policy": "LAZY",
      "structure": "com.github.naios.wide.entities.server.world.v6x.CreatureTemplate_6x",
      "entries": [
        {
          "name": "entry",
          "description": "creature entry (primary key).",
          "category": "key",
          "key": true,
          "alias": "CreatureName"
        },
        {
          "name": "KillCredit1",
          "target": "killCredit1",
          "category": "kill credits",
          "alias": "CreatureName"
        },
        {
          "name": "name",
          "category": "names"
        },
        {
          "name": "unit_flags",
          "target": "unitFlags",
          "category": "flags",
          "alias": "UnitFlags"
        },
        {
          "name": "unit_class",
          "target": "unitClass",
          "category": "flags",
          "alias": "UnitClass"
        },
        {
          "name": "VerifiedBuild",
          "defaultValue": "15995"
        }
      ]
    },
    "quest_template": {
      "policy": "LAZY",
      "structure": "com.github.naios.wide.entities.server.world.v6x.QuestTemplate_6x",
      "entries": [
        {
          "name": "ID",
          "target": "id",
          "description": "quest id (primary key).",
          "category": "key",
          "key": true,
          "alias": "QuestName"
        },
        {
          "name": "LogTitle",
          "target": "title"
        }
      ]
    }
  }
}